{
  "name": "advanced-clean-ts-api",
  "version": "1.0.0",
  "description": "Professional API using Clean Architecture and TDD.",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "clean architecture",
    "clean code",
    "tdd",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "author": {
    "name": "Roberto Kang",
    "email": "betoakang@gmail.com",
    "url": "https://robertoakang.github.io"
  },
  "main": "index.js",
  "scripts": {
    "start": "node dist/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "prepare": "husky install",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/index.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "eslint 'src/**'",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:coverage": "npm test -- --coverage",
    "test:fb-api": "npm test -- -c ./jest.integration.config.js tests/external/facebook-api.test.ts"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.8.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "pg-mem": "1.9.11",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "axios": "^1.1.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typeorm": "0.2.29"
  }
}
